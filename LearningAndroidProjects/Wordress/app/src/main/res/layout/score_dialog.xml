<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_width="320dp"
    android:layout_height="250dp" >

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:layout_marginStart="26dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/homeButton" />

    <Button
        android:id="@+id/changeLevelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Level"
        android:layout_below="@+id/scoreView"
        android:layout_alignStart="@+id/highestScoreView" />

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score is:"
        android:textSize="25dp"
        android:layout_above="@+id/playAgainButton"
        android:layout_toEndOf="@+id/playAgainButton"
        android:layout_marginBottom="46dp" />

    <TextView
        android:id="@+id/highestScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest score is:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/scoreView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME OVER"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>